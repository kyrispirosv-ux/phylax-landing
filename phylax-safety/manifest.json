{
  "manifest_version": 3,
  "name": "Phylax Safety",
  "version": "9.2",
  "description": "Child safety with video blocking, grooming detection, risk scoring, and parent dashboard.",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "externally_connectable": {
    "matches": [
      "https://phylax-landing.vercel.app/*",
      "https://phylax2.vercel.app/*",
      "https://app.phylax.ai/*",
      "http://localhost/*"
    ]
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://phylax-landing.vercel.app/*",
        "https://phylax2.vercel.app/*",
        "https://app.phylax.ai/*",
        "http://localhost/*"
      ],
      "js": [
        "bridge.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/observer.js",
        "content/enforcer.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*",
        "https://m.youtube.com/*"
      ],
      "js": [
        "content/youtube-scanner.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.google.com/*",
        "https://google.com/*",
        "https://www.bing.com/*",
        "https://bing.com/*",
        "https://duckduckgo.com/*",
        "https://www.duckduckgo.com/*",
        "https://search.yahoo.com/*",
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": [
        "content/search-interceptor.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  }
}