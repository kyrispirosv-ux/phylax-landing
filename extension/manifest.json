{
  "manifest_version": 3,
  "name": "Phylax SafeGuard",
  "version": "4.0",
  "description": "Intelligent child safety with grooming detection, content filtering, behavior analysis, and parent dashboard integration.",

  "permissions": [
    "storage",
    "declarativeNetRequest",
    "tabs",
    "webNavigation"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "externally_connectable": {
    "matches": [
      "https://phylax-landing.vercel.app/*",
      "https://app.phylax.ai/*",
      "http://localhost:*/*",
      "http://127.0.0.1:*/*"
    ]
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://phylax-landing.vercel.app/*",
        "https://app.phylax.ai/*",
        "http://localhost:*/*",
        "http://127.0.0.1:*/*"
      ],
      "js": ["bridge.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content/observer.js", "content/enforcer.js"],
      "run_at": "document_start"
    }
  ],

  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  }
}
